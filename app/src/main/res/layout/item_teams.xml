<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

    
    <data>
        
        <variable
            name="teams"
            type="com.example.football.model.teams.Team" />
    </data>
    
    <RelativeLayout
        android:layout_margin="@dimen/_4"
        android:background="@drawable/bg_item_competition"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150">



        <ImageView

            android:scaleType="fitXY"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_team"/>


        <TextView
            android:padding="@dimen/_8"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shadwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{teams.name}"
            android:textColor="@color/white"
            android:textSize="@dimen/_24s"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_4"
            android:layout_marginStart="@dimen/_8"
            android:layout_marginEnd="@dimen/_8"
            android:layout_alignParentBottom="true" />


        <TextView

            android:padding="@dimen/_8"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shadwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{teams.shortName}"
            android:textColor="@color/white"
            android:layout_margin="@dimen/_4"
            android:textSize="@dimen/_24s"
            android:gravity="center"

          />



    </RelativeLayout>
    
</layout>
